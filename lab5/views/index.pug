doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        title Second Express application
    body
        main
            h1 Second Express application
            form(method='POST' action='/')
                label(for='name') Give your name
                input(name='name')
                br
                input(type='submit')
                input(type='reset')
            img(src="img/amogus.jpg", alt="Amogus")
            table
                tr
                    th Nazwisko
                    th Imie
                    if mongo
                        th Wydzial
                each student in students
                    tr
                        td= student.nazwisko
                        td= student.imie
                        if mongo
                            td= student.wydzial